<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <CheckBox
        android:id="@+id/checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"/>

    <ImageView
        android:id="@+id/priorityImage"
        android:layout_width="24dp"
        android:layout_height="48dp"
        android:padding="8dp"
        android:contentDescription="@string/priority_status"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/todoTxt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:maxLines="3"
        android:ellipsize="end"
        android:textColor="@color/black"
        android:text="Купить что-то"
        android:textSize="20sp"
        android:padding="8dp"/>
    <ImageButton
        android:id="@+id/todoInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:contentDescription="@string/todo_info"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:padding="4dp"
        android:src="@drawable/todo_info" />
</LinearLayout>